<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".DrawRune" >

    <android.gesture.GestureOverlayView
        android:id="@+id/gestures"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gestureStrokeType="multiple"
        android:fadeOffset="800" />

    <TextView
        android:id="@+id/draw_rune_cast_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/draw_rune_cast_time"
        android:textSize="@dimen/draw_rune_text_size" />

    <TextView
        android:id="@+id/draw_rune_cast_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/draw_rune_cast_time"
        android:layout_marginTop="@dimen/draw_rune_cast_score"
        android:textSize="@dimen/draw_rune_text_size" />

    <ImageView
        android:id="@+id/draw_rune_spell_rune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/draw_rune_spell_rune_margin" />

    <TextView
        android:id="@+id/draw_rune_cast_effectiveness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/draw_rune_cast_effectiveness_bottom"
        android:textSize="@dimen/draw_rune_text_size" />

</RelativeLayout>
